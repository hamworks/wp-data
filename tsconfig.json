{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noEmit": false,
        "strict": false,
        "declaration": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": "./",
        "outDir": "build-module"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
